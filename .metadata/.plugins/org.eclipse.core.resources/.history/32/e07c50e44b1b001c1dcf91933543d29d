int obtenerNumeroFloat( float * pResultado, char * mensaje, char * mensajeError, float minimo, float maximo, int reintentos)
{
	int retorno = 1;
	float num;
	int resultadoScanf;


	do
	{
		printf("%s", mensaje);
		resultadoScanf = scanf( "%f" ,&num);

		if(pResultado != NULL && mensaje != NULL && mensajeError != NULL && resultadoScanf == 1 && num<=maximo && num>=minimo)
		{
			* pResultado = num;
			printf("numero %f", num);
			retorno = 0;
			break;
		}
		else
		{
			printf("%s", mensajeError);
			fflush(stdin);
			reintentos--;
		}
	} while(reintentos>=0);

	return retorno;

}

