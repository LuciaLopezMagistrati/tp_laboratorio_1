#include <stdio.h>
#include <stdlib.h>


int utn_getNumero( int * pResultado, char * mensaje, char * mensajeError, int minimo, int maximo, int reintentos);

int main(void) {
	setbuf(stdout,NULL);

	int resultado;


	resultado = utn_getNumero(&resultado, "Ingrese un numero", "Error", -12.00, 12.00, 3);



	puts("!!!Hello World!!!"); /* prints !!!Hello World!!! */
	return EXIT_SUCCESS;
}

int utn_getNumero( float * pResultado, char * mensaje, char * mensajeError, float minimo, float maximo, float reintentos)
{
	int retorno = 1;
	float num;
	int resultadoScanf;


	do
	{
		printf("%s", mensaje);
		resultadoScanf = scanf( "%f" ,&num);

		if(pResultado != NULL && mensaje != NULL && mensajeError != NULL && resultadoScanf == 1 && num<=maximo && num>=minimo)
		{
			* pResultado = num;
			retorno = 0;
			break;
		}
		else
		{
			printf("%s", mensajeError);
			fflush(stdin);
			reintentos--;
		}
	} while(reintentos>=0);

	return retorno;

}
